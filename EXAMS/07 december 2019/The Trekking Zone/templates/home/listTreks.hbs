<div id="treks-list">
    {{#each treks}}
    <a href="#/trek/details/{{objectId}}" class="card overflow-hidden treksPlaceholder trek-details" style="width: 20rem; height: 18rem;">
        <div class="card-body">
            <p class="card-text">{{name}}</p>
        </div>
        <img class="card-image"
            src="{{image}}"
            alt="Card image cap">
    </a>
    {{/each}}
</div>


