{{>header}}
<div id="cinema">
    <h1>All Movies</h1>
    <form action="#/catalog/search" method="GET">
        <label>Search genre:</label>
        <input type="text" name="search">
        <input type="submit" value="Search">
    </form>

    {{>paging}}
    <div class="movies">

    {{#each movies}}
        <div class="movie">
            <h2>Title: {{title}}</h2>
            <img
                src="{{image}}">
            <p>Available Tickets: {{availableTickets}}</p>
            <button><a href="#/movie/buy/{{objectId}}?title={{title}}&availableTickets={{availableTickets}}&origin={{@root.origin}}&search={{@root.search}}">Buy Ticket</a></button>
            <button><a href="#/movie/details/{{objectId}}">Details</a></button>
        </div>
    {{/each}}

    </div>
    {{>paging}}
</div>

