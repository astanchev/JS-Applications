{{>header}}

<div id="detailsMovie">
    <h1>Details</h1>
    <div class="movie">
        <h2>Title: {{title}}</h2>
        <img
            src="{{image}}">
        <p>{{description}}</p>
        <h2>Genres</h2>
        <ul class="genres">
            <li>{{genres}}</li>
        </ul>
        <p>Available Tickets: {{availableTickets}}</p>
        <button><a href="#/movie/buy/{{objectId}}?title={{title}}&availableTickets={{availableTickets}}&origin={{origin}}">Buy Ticket</a></button>
    </div>
</div>

{{>footer}}