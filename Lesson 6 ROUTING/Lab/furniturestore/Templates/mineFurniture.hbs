<div class="container">
    <div class="row space-top">
        <div class="col-md-12">
            <h1>Profile Page</h1>
            <p>Listing your furniture.</p>
        </div>
    </div>
    <div class="row space-top">
        {{#each furniture}}
        <div class="col-md-4">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <blockquote class="card-blockquote">
                        <img src="{{image}}" />
                        <p>{{description}}</p>
                        <footer>Someone famous in
                            <cite title="Source Title">{{make}}</cite>
                        </footer>
                        <div class="pull-right">
                            <a href='#/furniture/details/{{objectId}}' data-class="details"
                                class="btn btn-info">Details</a>
                            <a href='#/furniture/mine/{{objectId}}' data-class="delete" class="btn btn-danger">Delete
                                Item</a>
                        </div>
                    </blockquote>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-12">
            <h1>No furniture</h1>
        </div>
        {{/each}}
    </div>
</div>